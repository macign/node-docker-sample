{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "ES2017", "ES2018", "ES2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
